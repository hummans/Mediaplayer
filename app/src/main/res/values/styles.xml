<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar" />

    <style name="AppWidget" />

    <style name="AppWidget.BottomNavigationStyle">
        <item name="android:background">?attr/colorBottomNavigation</item>
        <item name="itemIconTint">@drawable/bottom_navigation_colors</item>
        <item name="itemTextColor">@drawable/bottom_navigation_colors</item>

    </style>

    <style name="AppWidget.ListView">
        <item name="colorBackground">@color/white</item>
    </style>


    <style name="AppWidget.Title">
        <item name="android:textColor">?attr/colorOnMajorTitleBackground</item>
        <item name="android:textSize">@dimen/major_title</item>
        <item name="android:background">?attr/colorMajorTitleBackground</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppWidget.Tabs">
        <item name="android:textStyle">bold</item>
        <item name="tabSelectedTextColor">?attr/colorOnTabBackground</item>
        <item name="tabIndicatorColor">?attr/colorTabIndicator</item>
    </style>
</resources>
